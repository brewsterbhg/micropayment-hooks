{
  "name": "micropayment-hooks",
  "version": "0.0.2",
  "description": "Hook into micropayment events",
  "source": "src/index.js",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brewsterbhg/micropayment-hooks.git"
  },
  "author": {
    "name": "Keith Brewster",
    "email": "keith.brewster22@gmail.com"
  },
  "license": "MIT",
  "keywords": [
    "webmonetization"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "parcel serve src/index.js --log-level 4",
    "prebuild": "rimraf dist",
    "build": "microbundle",
    "cz": "git-cz",
    "lint": "eslint 'src/*.{js,ts}' --quiet --fix",
    "test": "jest --env=jsdom",
    "coverage": "jest --coverage",
    "pre-commit": "npm run lint && npm run test && pretty-quick --staged",
    "prepublish": "npm run lint && npm run test && npm run prebuild && npm run build"
  },
  "devDependencies": {
    "@babel/preset-env": "7.12.11",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@typescript-eslint/eslint-plugin": "4.18.0",
    "@typescript-eslint/parser": "4.18.0",
    "babel-core": "6.26.3",
    "babel-jest": "26.6.3",
    "babel-preset-env": "1.7.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.18.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "microbundle": "0.13.0",
    "parcel-bundler": "1.12.4",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "rimraf": "3.0.2",
    "typescript": "4.1.3",
    "@types/jest": "26.0.21",
    "ts-jest": "26.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
